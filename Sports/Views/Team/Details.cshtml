@model SportsMVC.Models.m_Team

@{
    ViewData["Title"] = "Team Details";
}

<h1>@ViewData["Title"]: @Model.Name</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sport)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sport.Name)
        </dd>
    </dl>
    @if (Model.TeamPlayers != null)
   {
       <table class='table'>
           <thead>
        <tr>
            <th>
                Player Name
            </th>
            <th>
                Roster #
            </th>
            <th></th>
        </tr>
    </thead>
       

       <dl class="row">
        <dt class = "col-sm-2">
            Player
        </dt>
       @foreach (var player in Model.TeamPlayers)
      {
          <tr>
            <td>
                @player.Name
            </td>
            <td>
                @player.Roster
            </td>
            <td>
                <a asp-controller='Players' asp-action="Delete" asp-route-id="@player.Id">Remove</a>
            </td>
        </tr>
      }
      </dl>
      </table>
   }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
