@model SportsLib.Models.Sport
@{
    ViewData["Title"] = "Delete";
}
<h1>Delete @Model.Name</h1>
<hr />
<div class="row w-100">
    <div class="my-5 py-5 w-100">
        <form asp-action="Delete" class='d-flex flex-column justify-content-center align-items-center'>
            <div class='w-100 text-center'>
                <h2>Are you sure you want to delete this sport?</h2>
                <h3>You cannot undo this action.</h3>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}