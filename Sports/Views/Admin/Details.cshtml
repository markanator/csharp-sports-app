@model SportsLib.Interfaces.ISport

@{
    ViewData["Title"] = "Details";
}

<div class='d-flex justify-content-between align-items-center my-3'>
    <h1>@Model.Name @ViewData["Title"]</h1>
    @Html.ActionLink("Delete", "Delete", new {  id=Model.Name })
</div>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <table class='table'>
        <thead>
            <tr>
                <th>
                    Team Name
                </th>
                <th>
                    Team Roster
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach (var team in Model.SportTeams)
        {
            <tr>
                <td class = "col-sm-10">
                    @team.Name
                </td>
                <td>
                @foreach (var player in team.TeamPlayers)
                {
                    <i>@player.Name</i> @player.RosterNumber
                }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.Name  }) |
    <a asp-action="Index">Back to List</a>
</div>